<!DOCTYPE html>
<html lang="en" data-theme="dark">
<%- include("partials/header.ejs"); %>

<body>
<%- include("partials/nav.ejs"); %>
<div class="container-fluid" style="margin-top:1em;">
<!--    <div class="d-flex" style="background-image: url(https://placehold.it/1920x540); background-position: center; background-size: cover; width: 50%; height: 22vh;">-->

<!--    </div>-->
    <h5 class="d-flex align-items-center"><i class="fas fa-circle fa-xs center-block"
                                             style="color: red; line-height: inherit"></i>&nbsp;Live now</h5>
    <div class="d-flex flex-wrap">
        <% streams.forEach((stream) => { %>
            <div class="p-1 stream-preview m-0">
                <a href="/stream/<%= stream.watch_key %>" class="no-bs">
                    <div class="stream-thumbnail"
                         style="background-image: url(<%= stream.thumbnail %>); background-size: contain; background-position: center">
                        <span class="badge badge-danger ml-2 mt-2">Live</span>
                        <span class="badge badge-light mr-1 mt-2"><%= stream.viewers %> viewers</span>
                    </div>
                    <div class="d-flex justify-content-after">
                        <div class="pt-2 ml-0 pl-0">
                            <div class="img-md" style="background-image: url(<%= stream.thumbnail %>)"></div>
                        </div>
                        <div class="pl-2 pt-2">
                            <h5 class="m-0" style=""><%= stream.name %></h5>
                            <span class="text-muted"><%= stream.owner.username %><% if(stream.owner.verified){ %> <i class="fas fa-check-circle fa-sm text-primary"></i> <% } %></span>
                        </div>
                    </div>
                </a>
            </div>
        <% }); %>

    </div>
</div>
</body>
<%- include("partials/footer.ejs"); %>
</html>
